#!/bin/bash

ssh_config=${HOME}/.ssh/config
hosts=( dcbid{1..19} sebid{1..8} sgbid{1..2} debid{1..10} ccp{1..9} dctest{1..2} dcrpt{1..4} )

touch $ssh_config
mv $ssh_config $ssh_config.backup

for host in "${hosts[@]}"
do
  echo "Host ${host}" >> $ssh_config
  echo "Hostname ${host}.simpli.fi" >> $ssh_config
  echo >> $ssh_config
done
